{% set grouped = matches | groupByDate %}
{% set today = grouped.get(todayDate) %}

<div id="modal" class="modal schedule">
    <div class="modal__content">
        <span class="close">&times;</span>
        <h1 class="modal__content_caption">Расписание на сегодня</h1>
        <table class="schedule__table">
            <tr>
                <th>Игра</th>
                <th>Начало</th>
                <th>Состояние</th>
                <th>Счет</th>
            </tr>
            {% if today != null %}
            {% for item in today %}
            <tr class="schedule__table_string {% if item.status.isRun() %}active{% else %}deactive{% endif %}">
                <td>{{item.name}}</td>
                <td>{{item.startTime | date("HH:mm")}}</td>
                <td>{{item.status}}</td>
                <td>{{item.score}}</td>
            </tr>
            {% endfor %}
            {% endif %}
        </table>
    </div>
</div>


<script src="/js/startPage.js"></script>
