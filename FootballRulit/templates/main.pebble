<header class="startPage__header">
    <nav>
        <ul class="startPage__header_menu">
            <li><a href="#" class="startPage__header_menu_item">Об игре</a></li>
            <li><a href="#" class="startPage__header_menu_item">Правила</a></li>
            <li><a href="#" class="startPage__header_menu_item">Расписание-матчи</a></li>
            <li id="personalArea">
                <span class="startPage__header_menu_item">Личный кабинет</span>
                <div class="startPage__showingMenu_wrapper">
                    <div class="startPage__showingMenu_user">{{ user.username }}</div>
                    <p class="startPage__showingMenu_score">Ваш счет: {{ user.balance }}</p>
                    <a href="#" class="startPage__showingMenu_item">История ставок</a>
                    <a href="/logout" class="startPage__showingMenu_item">Выход</a>
                </div>
            </li>
        </ul>
    </nav>
</header>

<section class="startPage__matches">
    <h1 class="startPage__matches_caption">Матчи на сегодня</h1>
    <div class="startPage__matches_wrapper">
        {% for match in matches %}
        <a data-url="/match/{{ match.id }}"
           class="startPage__matches_item {% if item.status.isRun() %}active{% else %}deactive{% endif %}">
            <p class="startPage__matches_item_name">
                {{ match.name }}
            </p>
            <span class="startPage__matches_item_start">{{match.startTime | date('HH:mm')}}</span>
            <span class="startPage__matches_item_state">{{match.status}}</span>
            <div class="startPage__matches_item_score">{{ match.score }}</div>
        </a>
        {% endfor %}
    </div>
</section>

